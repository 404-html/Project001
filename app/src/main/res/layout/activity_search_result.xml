<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/customshape2"
    android:clipToPadding="false"
    android:elevation="2dp"
    android:padding="14dp">

    <TextView
        android:id="@+id/departureSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="14dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/destinationSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="14dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/driverSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="14dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/seatsSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:padding="14dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/priceSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:padding="14dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/dateSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="14dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/timeSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:padding="14dp"
        android:text="TextView" />
</RelativeLayout>