<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:layout_width="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatar"
        android:layout_toRightOf="@+id/avatar"
        android:elevation="2dp"
        android:maxWidth="300dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Rose"
        android:textSize="17dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/destination_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_below="@+id/name"
        android:elevation="2dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textSize="17dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/devider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_below="@+id/destination_body"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:paddingRight="10dp"
        android:text="------------------------------------------------------------------------"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/author_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/devider"
        android:layout_marginLeft="10dp"
        android:maxWidth="300dp"
        android:elevation="2dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textSize="14dp" />

    <TextView
        android:id="@+id/date_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/author_body"
        android:layout_marginLeft="10dp"
        android:maxWidth="300dp"
        android:elevation="2dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textSize="14dp" />

    <TextView
        android:id="@+id/availableSeats_body"
        android:layout_width="170dp"
        android:layout_height="23dp"
        android:maxWidth="300dp"

        android:layout_below="@+id/date_body"
        android:layout_marginLeft="10dp"
        android:elevation="2dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:text="4 total seats"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/price_body"
        android:layout_width="80dp"
        android:layout_height="23dp"
        android:maxWidth="300dp"

        android:layout_below="@+id/date_body"
        android:layout_toRightOf="@+id/availableSeats_body"
        android:elevation="2dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:layout_marginLeft="40dp"
        android:text="How are you doing? This ige that shoobably wrap."
        android:textSize="17dp" />

    <Button
        android:id="@+id/selectButton"
        android:layout_width="300dp"
        android:maxWidth="300dp"
        android:layout_height="35dp"
        android:layout_below="@+id/availableSeats_body"
        android:text="Select"
        android:textSize="15dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorPrimary"/>


</RelativeLayout>